    <style>
        * {
          box-sizing: border-box;
        }
        
        /* Create two equal columns that floats next to each other */
        .main-container{
          display : flex;
          flex-direction : row;
          flex-wrap : wrap;
        }
        .kmap-container{
          width : calc(100% - 250px);
          height : 800px;
        }
        .menubar {
          float: left;
          width : 250px;
          padding: 10px;
        }
        @media (max-width:1016px){
          .kmap-container{
            width : 100%;
            height : 400px;
          }
          .menubar {
            width : 100%;
            padding: 10px;
            height: 100px; /* Should be removed. Only for demonstration */
          }
          .nav1{
            float: left;
            width : 50%;
          }
          .nav2{
            width: 50%;
          }
        }
        /* Clear floats after the columns */
        .kmap {
          content: "";
          display: table;
          clear: both;
          width:100%;
          height:100%;
        }
        </style>

